            </div>
            <div class="subline">
                <a href="<%if(data.originalVideos[1].url.length>10){%><%=data.originalVideos[1].url%><%}else{%><%=rootPath%>/video/<%=data.originalVideos[1].url%><%}%>">
                    <div class="fl">
                        <img src="<%=data.originalVideos[1].cover%>">
                    </div>
                    <div class="subline-width fr">
                        <span class="subline-title"><%-data.originalVideos[1].title%></span>
                        <span class="subline-playTime">
                            <!--<i class="sub-i-playTime"></i>-->
                            <span class="sub-news-playTime"><%=data.originalVideos[1].updateTime.substr(data.originalVideos[1].updateTime.length - 5)%></span>
                        </span>
                    </div>
                </a>
            </div>
            <div class="subline">
                <a href="<%if(data.originalVideos[2].url.length>10){%><%=data.originalVideos[2].url%><%}else{%><%=rootPath%>/video/<%=data.originalVideos[2].url%><%}%>">
                    <div class="fl">
                        <img src="<%=data.originalVideos[2].cover%>">
                    </div>
                    <div class="subline-width fr">
                        <span class="subline-title"><%-data.originalVideos[2].title%></span>
                        <span class="subline-playTime">
