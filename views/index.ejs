                    </div>
                    <div class="subline-width fr">
                        <span class="subline-title"><%-data.netNews[2].title%></span>
                        <span class="subline-playTime">
                            <!--<i class="sub-i-playTime"></i>-->
                            <span class="sub-news-playTime"><%=data.netNews[2].updateTime.substr(data.netNews[2].updateTime.length - 5)%></span>
                        </span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="black">
    <div class="main">
        <div class="other-model">
            <div class="title">
                <i class="i-title blue"></i><span class="black-type">热门推荐</span>
                <a href="#" class="icon-more"></a>
            </div>
            <div class="content">
                <a href="<%if(data.hotRec[0].url.length>10){%><%=data.hotRec[0].url%><%}else{%><%=rootPath%>/video/<%=data.hotRec[0].url%><%}%>">
                    <img class="main-img" src="<%=data.hotRec[0].cover%>">
                    <span class="sub-title"><%-data.hotRec[0].title%></span>
                    <span class="headline-playTime">
                       <!--<i class="sub-i-playTime"></i>-->
                        <span class="sub-news-playTime"><%=data.hotRec[0].updateTime%></span>
                   </span>
                </a>
                <div class="sub-recommend">
                    <%for(var i = 1;i < data.hotRec.length;i++){%>
                    <a href="<%if(data.hotRec[i].url.length>10){%><%=data.hotRec[i].url%><%}else{%><%=rootPath%>/video/<%=data.hotRec[i].url%><%}%>" class="video-item">
                        <img src="<%=data.hotRec[i].cover%>" class="sub-video-img">
                        <!--<span class="sub-video-duration-left">01:55</span>-->
                        <span class="sub-title sub-video-title"><%-data.hotRec[i].title%></span>
                        <span class="headline-playTime">
                            <!--<i class="sub-i-playTime"></i>-->
                            <span class="sub-news-playTime"><%=data.hotRec[i].updateTime%></span>
                        </span>
                    </a>
                    <%}%>
                </div>
            </div>
        </div>

        <div class="padded-container">
            <a href="javascript:;" class="show-more-button" id="showMore" style="display:none">
                <span class="show-more-span">查看更多</span>
            </a>
        </div>

        <%include subFoot.ejs%>
