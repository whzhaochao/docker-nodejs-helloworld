                <a href="<%if(data.netNews[1].url.length>10){%><%=data.netNews[1].url%><%}else{%><%=rootPath%>/video/<%=data.netNews[1].url%><%}%>">
                    <div class="fl">
                        <img src="<%=data.netNews[1].cover%>">
                    </div>
                    <div class="subline-width fr">
                        <span class="subline-title"><%-data.netNews[1].title%></span>
                        <span class="subline-playTime">
                            <!--<i class="sub-i-playTime"></i>-->
                            <span class="sub-news-playTime"><%=data.netNews[1].updateTime.substr(data.netNews[1].updateTime.length - 5)%></span></span>
                    </div>
                </a>
            </div>
            <div class="subline">
                <a href="<%if(data.netNews[2].url.length>10){%><%=data.netNews[2].url%><%}else{%><%=rootPath%>/video/<%=data.netNews[2].url%><%}%>">
                    <div class="fl">
